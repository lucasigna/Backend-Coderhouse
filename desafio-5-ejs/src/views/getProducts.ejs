<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Desafio 5 - EJS</title>
</head>
<body>
    <h1>Productos</h1>
    <% if(productosList.length > 0) { %> 
        <table>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>
            <% productosList.forEach( prod => { %>
                <tr>
                    <td><%= prod.id%></td>
                    <td><%= prod.title%></td>
                    <td>$ <%= prod.price%></td>
                    <td><img src="<%= prod.thumbnail%>"></td>
                </tr>
            <% }) %>
        </table>
    <% } else { %>
        <h2>No se encontraron productos</h2>
    <% } %>

    <a href="/api/productoForm">Agregar un producto</a>
</body>
</html>